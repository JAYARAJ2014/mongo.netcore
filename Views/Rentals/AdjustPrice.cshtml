@model RealEstateListing.Models.Rental

@{
    ViewBag.Title = "Adjust Price";
}

<h2>Adjust Price</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Description, new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Model.Description
            </div>
        </div>

        <div class="form-group">
            <label class = "control-label col-md-2">Old Price</label>
            <div class="col-md-10">
                @Model.Price
            </div>
        </div>

        <div class="form-group">
            <label class = "control-label col-md-2">New Price</label>
            <div class="col-md-10">
                @Html.TextBox("NewPrice")
            </div>
        </div>
          <div class="form-group">
            <label class = "control-label col-md-2">Reason</label>
            <div class="col-md-10">
                @Html.TextArea("Reason")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Post" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Rentals", "Index")
</div>